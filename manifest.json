{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "High DPI Screenshots",
  "description": "Now take High DPI Screenshots with precise magnification control",
  "version": "1.0",
  "action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "activeTab",
    "downloads",
    "commands",
    "storage",
    "scripting"
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "windows": "Ctrl+Shift+S",
        "mac": "Ctrl+Shift+S",
        "chromeos": "Ctrl+Shift+S",
        "linux": "Ctrl+Shift+S"
      }
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}